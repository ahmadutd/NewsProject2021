@page
@model AllNewsCms.Web.Pages.News.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<div class="row">
    <div class="col">
        <div class="tab-header-delete alert-danger d-flex align-items-center">
            <img src="~/img/Delete/Delete.png" alt="Alternate Text" />
            <strong>Are you sure you want to delete this section?</strong>
            <form class="ml-auto p-1" method="post">
                <input type="hidden" asp-for="News.Id" />

                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
</div>
<hr />
<div class="row" style="text-align:center">

    <div class="col-12">
        <div class="form-delete p-2">
            <h6 class="alert-danger">@Html.DisplayNameFor(x => x.News.Title)</h6>
            <span>@Model.News.Title</span>

        </div>
    </div>
    @if (@Model.News.FirstImage != null)
    {
        <div class="col-12">
            <div class="form-delete p-2">

                <h6 class="alert-danger">@Html.DisplayNameFor(x => x.News.FirstImage)</h6>
                <img src="@Model.News.FirstImage" alt="Alternate Text" />

            </div>
        </div>
    }
    @if (@Model.News.ImageCoverPath != null)
    {
        <div class="col-12">
            <div class="form-delete p-2">
                <h6 class="alert-danger">@Html.DisplayNameFor(x => x.News.ImageCoverPath)</h6>
                <img src="~/Upload/News/Images/@Model.News.ImageCoverPath" alt="Alternate Text" />
            </div>
        </div>
    }

    @if (@Model.News.FirstDescription != null)
    {
        <div class="col-12">
            <div class="form-delete p-2">
                <h6 class="alert-danger">@Html.DisplayNameFor(x => x.News.FirstDescription)</h6>
                <span>@Model.News.FirstDescription</span>

            </div>
        </div>
    }
    @if (@Model.News.FirstDescriptionFirstParagraph != null)
    {
        <div class="col-12">
            <div class="form-delete p-2">
                <h6 class="alert-danger">@Html.DisplayNameFor(x => x.News.FirstDescriptionFirstParagraph)</h6>
                <span>@Model.News.FirstDescriptionFirstParagraph</span>

            </div>
        </div>
    }


    @if (@Model.News.SecondImage != null)
    {
        <div class="col-12">
            <div class="form-delete p-2">

                <h6 class="alert-danger">@Html.DisplayNameFor(x => x.News.SecondImage)</h6>
                <img src="@Model.News.SecondImage" alt="Alternate Text" />

            </div>
        </div>
    }
    @if (@Model.News.SecondDescription != null)
    {
        <div class="col-12">
            <div class="form-delete p-2">
                <h6 class="alert-danger">@Html.DisplayNameFor(x => x.News.SecondDescription)</h6>
                <span>@Model.News.SecondDescription</span>

            </div>
        </div>
    }
    @if (@Model.News.SecondDescriptionFirstParagraph != null)
    {
        <div class="col-12">
            <div class="form-delete p-2">
                <h6 class="alert-danger">@Html.DisplayNameFor(x => x.News.SecondDescriptionFirstParagraph)</h6>
                <span>@Model.News.SecondDescriptionFirstParagraph</span>

            </div>
        </div>
    }

    @if (@Model.News.Video != null)
    {
        <div class="col-12">
            <div class="form-delete p-2">
                <h6 class="alert-danger">@Html.DisplayNameFor(x => x.News.Video)</h6>
                <iframe width="560" height="315" src="https://www.youtube.com/embed/@Model.News.Video" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>

            </div>
        </div>
    }
    @if (@Model.News.VideoCoverPath != null)
    {
        <div class="col-12">
            <div class="form-delete p-2">
                <h6 class="alert-danger">@Html.DisplayNameFor(x => x.News.VideoCoverPath)</h6>
                
                    <video class="VideoPalyBox" controls="controls">
                        <source src="~/Upload/News/Videos/@Model.News.VideoCoverPath" type="video/mp4" />
                    </video>
               

            </div>
        </div>
    }

    <div class="col-12 col-md-6">
        <div class="form-delete p-2">
            <h6 class="alert-danger">@Html.DisplayNameFor(x => x.News.CreatedDate)</h6>
            <span>@Model.News.CreatedDate</span>
        </div>

    </div>
    <div class="col-12 col-md-6">
        <div class="form-delete p-2">
            <h6 class="alert-danger">@Html.DisplayNameFor(x => x.News.CreatedBy)</h6>
            <span>@Model.News.CreatedUser?.UserName</span>
        </div>

    </div>
    <div class="col-12 col-md-6">
        <div class="form-delete p-2">
            <h6 class="alert-danger">@Html.DisplayNameFor(x => x.News.UpdatedDate)</h6>
            <span>@Model.News.UpdatedDate</span>
        </div>

    </div>
    <div class="col-12 col-md-6">
        <div class="form-delete p-2">
            <h6 class="alert-danger">@Html.DisplayNameFor(x => x.News.UpdatedBy)</h6>
            <span>@Model.News.UpdatedUser?.UserName</span>
        </div>

    </div>
</div>











