@page
@model AllNewsCms.Web.Pages.MoveText.CreateModel
@{
    ViewData["Title"] = "Create";
}

<div class="tab-header d-flex align-items-center alert-success p-2">
    <strong> Create MoveText</strong>

    <a asp-area="" asp-page="Index" class="btn btn-light ml-auto">MoveText List </a>

</div>
<hr />
<div class="p-2">
    <form method="post">
        <input type="hidden" asp-for="@Model.MoveText.Id" />
        <div class="form-row">
            <div class="form-group col-6 col-md-2">
                <label>Select Language</label>

                <div class="dropdown">
                    <button class="lang-class" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        SetLanguage
                    </button>
                    <div id="Lang-class" class="dropdown-menu dropdown-menu-right rtl" aria-labelledby="dropdownMenuButton">

                    </div>
                </div>

            </div>
            <div class="form-group col-10 col-md-10">
                <label asp-for="@Model.MoveText.Title"></label>
                <input class="form-control form-control-sm" type="text" asp-for="@Model.MoveText.Title" />
            </div>
            <div class="form-group col-12 col-md-12">
                <label asp-for="@Model.MoveText.Text"></label>
                <textarea class="form-control form-control-sm" type="text" asp-for="@Model.MoveText.Text"></textarea>
            </div>

        </div>
        <hr />
        <div class="col-12 col-md-1 p-0">
            <button type="submit" class="btn btn-success w-100 fas fa-check"></button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}