@model AllNewsCms.Web.Pages.Role.IndexModel
@{
    ViewData["Title"] = "Index";
}

<h3>Role Managment</h3>
<hr />
<div class="row">
    <div class="col col-md-6">
        <form asp-page-handler="AddRole" method="post">

            <div class="form-group">
                <label asp-for="Role.Name"></label>
                <input asp-for="Role.Name" class="form-control" />
                <span asp-validation-for="Role.Name" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Save Role</button>
        </form>
    </div>
</div>
<br />
<div class="row">
    <div class="col col-md-6">        

        <table id="myTable">
            <tr class="header">
                <th>#</th>
                <th>Role Name</th>
                <th>NormalizedName</th>

            </tr>
            
           
            @foreach (var item in Model.RoleModelList)
            {
                <tr>

                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.NormalizedName</td>


                </tr>
            }
            


        </table>
    </div>
</div>