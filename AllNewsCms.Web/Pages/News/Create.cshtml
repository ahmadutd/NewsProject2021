@page
@using Microsoft.AspNetCore.Mvc.Localization;
@using System.Globalization;
@inject IViewLocalizer Localizer
@model AllNewsCms.Web.Pages.News.CreateModel
@{
    ViewData["Title"] = "Create";
}

<div class="tab-header d-flex align-items-center alert-success p-2">
    <strong>Create News Form</strong>
    <a asp-area="" asp-page="Index" class="btn btn-light ml-auto">News List</a>


</div>
<hr />

<div class="p-2">
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="@Model.News.Id" />

        <div class="form-row">
            <div class="form-group col-4 col-md-2">
                <label>Select Language</label>

                <div class="dropdown">
                    <button class="lang-class" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        SetLanguage
                    </button>
                    <div id="Lang-class" class="dropdown-menu  dropdown-menu-right rtl" aria-labelledby="dropdownMenuButton">

                    </div>
                </div>

            </div>
            <div class="form-group col-4 col-md-6">
                <label asp-for="News.Category.CategoryName"></label>
                <div class="input-group">
                    <select asp-items="Model.CategoryList" asp-for="@Model.News.CategoryId" class="custom-select"></select>
                </div>

            </div>
            <div class="form-group col-4 col-md-4">
                <br />
                <div class="form-check form-check-inline mt-2 ml-1">
                    <input asp-for="News.HotCheack" class="form-check-input" type="checkbox" id="forhot" checked>
                    <label class="form-check-label p-2" for="forhot">Special</label>
                </div>
            </div>

            <div class="form-group col-12">
                <label asp-for="@Model.News.Title"></label>
                <input class="form-control form-control-sm" type="text" asp-for="@Model.News.Title" />
            </div>

            <div class="form-group col-12">
                <label asp-for="@Model.News.FirstImage"></label>
                <input class="form-control form-control-sm" type="text" asp-for="@Model.News.FirstImage" placeholder="https//YourAddress/Image/" />
            </div>
            <div class="form-group col-12">
                <label asp-for="@Model.News.ImageCoverPath"></label>
                <input class="form-control p-1" type="file" asp-for="@Model.News.File" />

            </div>
            <div class="form-group col-12 col-md-12 col-lg-12">
                <label asp-for="@Model.News.FirstDescription"></label>
                <textarea class="form-control form-control-sm" asp-for="@Model.News.FirstDescription"></textarea>
            </div>
            <div class="form-group col-12 col-md-12 col-lg-12">
                <label asp-for="@Model.News.FirstDescriptionFirstParagraph"></label>
                <textarea class="form-control form-control-sm" asp-for="@Model.News.FirstDescriptionFirstParagraph"></textarea>
            </div>

            <div class="form-group col-12">
                <label asp-for="@Model.News.SecondImage"></label>
                <input class="form-control form-control-sm" type="text" asp-for="@Model.News.SecondImage" placeholder="https//YourAddress/Image/" />
            </div>
            <div class="form-group col-12 col-md-12 col-lg-12">
                <label asp-for="@Model.News.SecondDescription"></label>
                <textarea class="form-control form-control-sm" asp-for="@Model.News.SecondDescription"></textarea>
            </div>
            <div class="form-group col-12 col-md-12 col-lg-12">
                <label asp-for="@Model.News.SecondDescriptionFirstParagraph"></label>
                <textarea class="form-control form-control-sm" asp-for="@Model.News.SecondDescriptionFirstParagraph"></textarea>
            </div>

            <div class="form-group col-12">
                <span class="fab fa-youtube text-danger mr-1"></span><label asp-for="@Model.News.Video"></label>
                <input class="form-control form-control-sm" type="text" asp-for="@Model.News.Video" />
            </div>
            <div class="form-group col-12">
                <label asp-for="@Model.News.VideoImg"></label>
                <input class="form-control p-1" type="file" asp-for="@Model.News.ImgFile" />

            </div>
            <div class="form-group col-12">
                <label asp-for="@Model.News.VideoCoverPath"></label>
                <input class="form-control p-1" type="file" asp-for="@Model.News.VideoFile" />

            </div>

            <div class="form-group col-6 col-md-6">
                <div class="form-check form-check-inline mt-2 ml-1">
                    <input asp-for="News.UpToCheack" class="form-check-input" type="checkbox" id="forupdate" checked>
                    <label class="form-check-label p-2" for="forupdate">Update Time</label>
                </div>

            </div>
        </div>
        <hr />
        <div class="col-12 col-md-1 p-0">
            <button type="submit" class="btn btn-success w-100 fas fa-check"></button>
        </div>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}