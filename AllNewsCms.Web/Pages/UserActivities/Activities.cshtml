                </td>
            </tr>
            <tr>
                <td scope="col">Audios</td>
                <td scope="col">
                    @if (Model.AudioCounts.Count() > 0)
                    {
                        <span class="badge badge-info">@Model.AudioCounts.Count()</span>
                    }
