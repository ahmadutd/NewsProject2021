@page
@model AllNewsCms.Web.Pages.Companys.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<div class="row ">
    <div class="col">
        <div class="tab-header-delete alert-danger d-flex align-items-center">
            <img src="~/img/Delete/Delete.png" alt="Alternate Text" />
            <strong>Are you sure you want to delete this section?</strong>
            <form class="ml-auto p-1" method="post">
                <input type="hidden" asp-for="Companys.Id" />

                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
</div>
<hr />
<div class="row" style="text-align:center">

    <div class="col-12">
        <div class="form-delete p-2">
            <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Companys.Title)</h6>
            <span>@Model?.Companys.Title</span>

        </div>
    </div>
    @if (Model.Companys.Image != null)
    {
        <div class="col-12">
            <div class="form-delete p-2">

                <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Companys.Image)</h6>
                <img style="width:200px;height:200px;" src="@Model?.Companys.Image" alt="Alternate Text" />

            </div>
        </div>
    }
    @if (Model.Companys.ImageCoverPath != null)
    {
        <div class="col-12 ">
            <div class="form-delete p-2">

                <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Companys.ImageCoverPath)</h6>
                <img style="width:200px;height:200px;" src="/Upload/Organisation/@Model?.Companys.ImageCoverPath" alt="Alternate Text" />

            </div>
        </div>
    }
    @if (Model?.Companys.Information != null)
    {
        <div class="col-12">
            <div class="form-delete p-2">
                <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Companys.Information)</h6>
                <span>@Model?.Companys.Information</span>

            </div>
        </div>
    }



    <div class="col-12 col-md-6">
        <div class="form-delete p-2">
            <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Companys.CreatedDate)</h6>
            <span>@Model?.Companys.CreatedDate</span>
        </div>

    </div>
    <div class="col-12 col-md-6">
        <div class="form-delete p-2">
            <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Companys.CreatedBy)</h6>
            <span>@Model?.Companys.CreatedUser?.UserName</span>
        </div>

    </div>
    <div class="col-12 col-md-6">
        <div class="form-delete p-2">
            <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Companys.UpdatedDate)</h6>
            <span>@Model?.Companys.UpdatedDate</span>
        </div>

    </div>
    <div class="col-12 col-md-6">
        <div class="form-delete p-2">
            <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Companys.UpdatedBy)</h6>
            <span>@Model?.Companys.UpdatedUser?.UserName</span>
        </div>

    </div>
</div>


