@page
@model AllNewsCms.Web.Pages.Videos.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<div class="row ">
    <div class="col">
        <div class="tab-header-delete alert-danger d-flex align-items-center">
            <img src="~/img/Delete/Delete.png" alt="Alternate Text" />
            <strong>Are you sure you want to delete this section?</strong>
            <form class="ml-auto p-1" method="post">
                <input type="hidden" asp-for="Videos.Id" />

                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
</div>
<hr />
<div class="row" style="text-align:center">

    <div class="col-12">
        <div class="form-delete p-2">
            <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Videos.Title)</h6>
            <span>@Model.Videos.Title</span>

        </div>
    </div>

    @if (Model.Videos.VideoPlay != null)
    {
        <div class="col-12">
            <div class="form-delete p-2">

                <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Videos.VideoPlay)</h6>
                <iframe width="560" height="315" src="https://www.youtube.com/embed/@Model.Videos.VideoPlay" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>

            </div>
        </div>
    }
    @if (@Model.Videos.VideoCoverPath != null)
    {
        <div class="col-12">
            <div class="form-delete p-2">
                <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Videos.VideoCoverPath)</h6>

                <video class="VideoPalyBox" controls="controls">
                    <source src="~/Upload/Videos/Media/@Model.Videos.VideoCoverPath" type="video/mp4" />
                </video>


            </div>
        </div>
    }
    @if (Model.Videos.Description !=null)
    {
        <div class="col-12">
            <div class="form-delete p-2">
                <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Videos.Description)</h6>
                <span>@Model.Videos.Description</span>

            </div>
        </div>
    }

    <div class="col-12 col-md-6">
        <div class="form-delete p-2">
            <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Videos.CreatedDate)</h6>
            <b>@Model.Videos.CreatedDate</b>
        </div>

    </div>
    <div class="col-12 col-md-6">
        <div class="form-delete p-2">
            <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Videos.CreatedBy)</h6>
            <b>@Model.Videos.CreatedUser?.UserName</b>
        </div>

    </div>
    <div class="col-12 col-md-6">
        <div class="form-delete p-2">
            <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Videos.UpdatedDate)</h6>
            <b>@Model.Videos.UpdatedDate</b>
        </div>

    </div>
    <div class="col-12 col-md-6">
        <div class="form-delete p-2">
            <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Videos.UpdatedBy)</h6>
            <b>@Model.Videos.UpdatedUser?.UserName</b>
        </div>

    </div>
</div>

