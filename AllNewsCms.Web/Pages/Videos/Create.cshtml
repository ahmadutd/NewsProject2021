@page
@model AllNewsCms.Web.Pages.Videos.CreateModel
@{
    ViewData["Title"] = "Create";
}

<div class="tab-header d-flex align-items-center alert-success p-2">
    <strong>Create Video</strong>
    <a asp-area="" asp-page="Index" class="btn btn-light ml-auto">Video List</a>


</div>
<hr />
<div class="p-2">
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="@Model.Videos.Id" />
        <div class="form-row">
            <div class="form-group col-6 col-md-2">
                <label>Select Language</label>

                <div class="dropdown">
                    <button class="lang-class" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        SetLanguage
                    </button>
                    <div id="Lang-class" class="dropdown-menu dropdown-menu-right rtl" aria-labelledby="dropdownMenuButton">

                    </div>
                </div>

            </div>
            <div class="form-group col-12">
                <label asp-for="@Model.Videos.Title"></label>
                <input class="form-control form-control-sm" type="text" asp-for="@Model.Videos.Title" />
            </div>

            <div class="form-group col-12">
                <span class="fab fa-youtube text-danger mr-1"></span><label asp-for="@Model.Videos.VideoPlay">[Please enter the video ID without prepositions and characters]</label>
                <input class="form-control form-control-sm" type="text" asp-for="@Model.Videos.VideoPlay" />

            </div>

            <div class="form-group col-12">
                <label asp-for="@Model.Videos.Description"></label>
                <textarea class="form-control form-control-sm" type="text" asp-for="@Model.Videos.Description"></textarea>
            </div>
            <div class="form-group col-12">
                <label asp-for="@Model.Videos.VideoImage"></label>
                <input class="form-control p-1" type="file" asp-for="@Model.Videos.ImgFile" />

            </div>
            <div class="form-group col-12">
                <label asp-for="@Model.Videos.VideoCoverPath"></label>
                <input class="form-control p-1" type="file" asp-for="@Model.Videos.File" />

            </div>
        </div>
        <hr />
        <div class="col-12 col-md-1 p-0">
            <button type="submit" class="btn btn-success w-100 fas fa-check"></button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}