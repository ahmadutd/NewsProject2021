@page
@model AllNewsCms.Web.Pages.SocialManagment.IndexModel
@{
    ViewData["Title"] = "Index";
}


<br />
<div class="row">
    <div class="col-12 col-md-8 m-auto">
        <table id="table-social" style="width:100%">


            <tr class="p-2">
                <th class="bg-secondary text-white p-1" style="width:75%">SocialMedia</th>
                <th class="bg-secondary text-white p-1" style="width:20%">UserName</th>
            </tr>

            <tr>
                <td>
                    <span class="fab fa-youtube text-danger mr-2 ml-2"></span>
                    Youtube.com
                </td>

                @foreach (var item in Model.socialData)
                {
                    <td>
                        @item.YoutubeIdName
                    </td>

                }

            </tr>
            <tr>
                <td>
                    <span class="fab fa-telegram text-info mr-2 ml-2"></span>
                    Telegram.com
                </td>

                @foreach (var item in Model.socialData)
                {
                    <td>
                        @item.TelegramIdName
                    </td>

                }


            </tr>
            <tr>
                <td>
                    <span class="fab fa-instagram text-danger mr-2 ml-2"></span>
                    Instagram.com
                </td>


                @foreach (var item in Model.socialData)
                {
                    <td>
                        @item.InstagramIdName
                    </td>

                }



            </tr>
            <tr>
                <td>
                    <span class="fab fa-twitter text-info mr-2 ml-2"></span>
                    Twitter.com
                </td>


                @foreach (var item in Model.socialData)
                {
                    <td>
                        @item.TwitterIdName
                    </td>

                }

            </tr>
            <tr>
                <td>
                    <span class="fab fa-facebook text-primary mr-2 ml-2"></span>

                    Facebook.com
                </td>

                @foreach (var item in Model.socialData)
                {
                    <td>
                        @item.FacebookIdName
                    </td>

                }

            </tr>
        </table>


        Your Email Address Is : @foreach (var item in Model.socialData)
        {<strong>@item.AddressEmail</strong>}
    </div>
</div>
<hr />
<div class="row">
    <div class="col-3 col-md-2 m-auto">


        @foreach (var item in Model.socialData)
        {

            <a asp-area="" asp-page="./Create" asp-route-id="@item.Id" class="btn btn-outline-secondary p-1"><span class="fas fa-edit mr-1"></span><span>Edit</span></a>

        }



    </div>
</div>
<br />