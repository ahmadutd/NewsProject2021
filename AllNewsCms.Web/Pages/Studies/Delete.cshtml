@page
@model AllNewsCms.Web.Pages.Studies.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<div class="row">
    <div class="col">
        <div class="tab-header-delete alert-danger d-flex align-items-center">
            <img src="~/img/Delete/Delete.png" alt="Alternate Text" />
            <strong>Are you sure you want to delete this section?</strong>
            <form class="ml-auto p-1" method="post">
                <input type="hidden" asp-for="Studies.Id" />

                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
</div>
<hr />
<div class="row" style="text-align:center">

    <div class="col-12">
        <div class="form-delete p-2">
            <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Studies.Title)</h6>
            <span>@Model.Studies.Title</span>

        </div>
    </div>
    @if (Model.Studies.Image != null)
    {
        <div class="col-12">
            <div class="form-delete p-2">

                <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Studies.Image)</h6>
                <img style="width:200px;height:250px;" src="@Model.Studies.Image" alt="Alternate Text" />

            </div>
        </div>
    }
    @if (Model.Studies.ImageCoverPath != null)
    {
        <div class="col-12">
            <div class="form-delete p-2">

                <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Studies.ImageCoverPath)</h6>
                <img style="width:200px;height:250px;" src="~/Upload/Studies/Images/@Model.Studies.ImageCoverPath" alt="Alternate Text" />

            </div>
        </div>
    }
    @if (Model.Studies.Description != null)
    {
        <div class="col-12">
            <div class="form-delete p-2">
                <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Studies.Description)</h6>
                <span>@Model.Studies.Description</span>

            </div>
        </div>
    }

    @if (Model.Studies.DownloadLink != null)
    {
        <div class="col-12">
            <div class="form-delete p-2">
                <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Studies.DownloadLink)</h6>
                <a class="btn btn-dark" href="~/Upload/Studies/Downloads/@Model.Studies.DownloadLink">Download</a>

            </div>
        </div>
    }

    <div class="col-12 col-md-6">
        <div class="form-delete p-2">
            <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Studies.CreatedDate)</h6>
            <span>@Model.Studies.CreatedDate</span>
        </div>

    </div>
    <div class="col-12 col-md-6">
        <div class="form-delete p-2">
            <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Studies.CreatedBy)</h6>
            <span>@Model.Studies.CreatedUser?.UserName</span>
        </div>

    </div>
    <div class="col-12 col-md-6">
        <div class="form-delete p-2">
            <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Studies.UpdatedDate)</h6>
            <span>@Model.Studies.UpdatedDate</span>
        </div>

    </div>
    <div class="col-12 col-md-6">
        <div class="form-delete p-2">
            <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Studies.UpdatedBy)</h6>
            <span>@Model.Studies.UpdatedUser?.UserName</span>
        </div>

    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

