@page
@model AllNewsCms.Web.Pages.Statements.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<div class="row">
    <div class="col">
        <div class="tab-header-delete alert-danger d-flex align-items-center">
            <img src="~/img/Delete/Delete.png" alt="Alternate Text" />
            <strong>Are you sure you want to delete this section?</strong>
            <form class="ml-auto p-1" method="post">
                <input type="hidden" asp-for="Statements.Id" />

                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
</div>
<hr />
<div class="row" style="text-align:center">

    <div class="col-12">
        <div class="form-delete p-2">
            <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Statements.Title)</h6>
            <span>@Model.Statements.Title</span>

        </div>
    </div>
    @if (Model.Statements.Image != null)
    {
        <div class="col-12">
            <div class="form-delete p-2">

                <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Statements.Image)</h6>
                <img src="@Model.Statements.Image" alt="Alternate Text" />

            </div>
        </div>
    }
    @if (Model.Statements.ImageCoverPath != null)
    {
        <div class="col-12">
            <div class="form-delete p-2">

                <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Statements.ImageCoverPath)</h6>
                <img src="~/Upload/Statements/@Model.Statements.ImageCoverPath" alt="Alternate Text" />

            </div>
        </div>
    }
    @if (Model.Statements.Description != null)
    {
        <div class="col-12">
            <div class="form-delete p-2">
                <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Statements.Description)</h6>
                <span>@Model.Statements.Description</span>

            </div>
        </div>
    }

    <div class="col-12 col-md-6">
        <div class="form-delete p-2">
            <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Statements.CreatedDate)</h6>
            <b>@Model.Statements.CreatedDate</b>
        </div>

    </div>
    <div class="col-12 col-md-6">
        <div class="form-delete p-2">
            <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Statements.CreatedBy)</h6>
            <b>@Model.Statements.CreatedUser?.UserName</b>
        </div>

    </div>
    <div class="col-12 col-md-6">
        <div class="form-delete p-2">
            <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Statements.UpdatedDate)</h6>
            <b>@Model.Statements.UpdatedDate</b>
        </div>

    </div>
    <div class="col-12 col-md-6">
        <div class="form-delete p-2">
            <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Statements.UpdatedBy)</h6>
            <b>@Model.Statements.UpdatedUser?.UserName</b>
        </div>

    </div>
</div>



