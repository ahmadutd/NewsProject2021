@page
@model AllNewsCms.Web.Pages.Photos.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<div class="row">
    <div class="col">
        <div class="tab-header-delete alert-danger d-flex align-items-center">
            <img src="~/img/Delete/Delete.png" alt="Alternate Text" />
            <strong>Are you sure you want to delete this section?</strong>
            <form class="ml-auto p-1" method="post">
                <input type="hidden" asp-for="Photos.Id" />

                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
</div>
<hr />
<div class="row" style="text-align:center">

    <div class="col-12">
        <div class="form-delete p-2">
            <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Photos.Title)</h6>
            <span>@Model.Photos.Title</span>

        </div>
    </div>
    @if (Model.Photos.Image != null)
    {
        <div class="col-12">
            <div class="form-delete p-2">

                <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Photos.Image)</h6>
                <img src="@Model.Photos.Image" alt="Alternate Text" />
            </div>
        </div>
    }
    @if (Model.Photos.ImageCoverPath != null)
    {
        <div class="col-12">
            <div class="form-delete p-2">

                <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Photos.ImageCoverPath)</h6>
                <img src="~/Upload/Photos/@Model.Photos.ImageCoverPath" alt="Alternate Text" />
            </div>
        </div>
    }
    @if (Model.Photos.Description != null)
    {
        <div class="col-12">
            <div class="form-delete p-2">
                <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Photos.Description)</h6>
                <span>@Model.Photos.Description</span>

            </div>
        </div>
    }

    <div class="col-12 col-md-6">
        <div class="form-delete p-2">
            <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Photos.CreatedDate)</h6>
            <b>@Model.Photos.CreatedDate</b>
        </div>

    </div>
    <div class="col-12 col-md-6">
        <div class="form-delete p-2">
            <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Photos.CreatedBy)</h6>
            <b>@Model.Photos.CreatedUser?.UserName</b>
        </div>

    </div>
    <div class="col-12 col-md-6">
        <div class="form-delete p-2">
            <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Photos.UpdatedDate)</h6>
            <b>@Model.Photos.UpdatedDate</b>
        </div>

    </div>
    <div class="col-12 col-md-6">
        <div class="form-delete p-2">
            <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Photos.UpdatedBy)</h6>
            <b>@Model.Photos.UpdatedUser?.UserName</b>
        </div>

    </div>
</div>

