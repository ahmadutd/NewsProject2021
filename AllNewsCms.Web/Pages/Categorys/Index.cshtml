@page
@model AllNewsCms.Web.Pages.Categorys.IndexModel
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col">
        <div class="tab-header d-flex align-items-center alert-info p-2">

            <strong>Create Category Form</strong>

        </div>
    </div>
</div>
<hr />
<div>
    <form method="post">
        <div class="form-row mb-3 d-flex align-items-center">
            <div class="form-group col-6 col-md-2">
                <label>Select Language</label>

                <div class="dropdown">
                    <button class="lang-class" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        SetLanguage
                    </button>
                    <div id="Lang-class" class="dropdown-menu rtl" aria-labelledby="dropdownMenuButton">

                    </div>
                </div>

            </div>



        </div>
    </form>
</div>

<div class="row">
    <div class="col-12 col-md-10">
        <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search">

        <table id="myTable">
            <tr class="header">
                <th style="width:90%;">@Html.DisplayNameFor(x => x.Categorys[0].CategoryName)</th>
                <th style="width:10%;">Edit</th>

            </tr>
            @if (Model.Categorys != null)
            {
                @foreach (var categorys in Model.Categorys)
                {
                    <tr>

                        <td class="font-revo">@categorys.CategoryName</td>
                        <td><a asp-area="" asp-page="./Create" asp-route-id="@categorys.Id" class="more-btn btn btn-light fas fa-pen-alt"></a></td>
                        

                    </tr>
                }
            }


        </table>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

