@page
@model AllNewsCms.Web.Pages.UserActivities.ActivitiesModel
@{
    ViewData["Title"] = "Activities";
}

<div class="row">
    <div class="col">
        <div class="alert alert-info d-flex align-items-center">
            <h4 class="fas fa-history mr-2"></h4>
            <h4>User Activities - @Model.Human?.UserName</h4>
        </div>
    </div>
</div>

<div class="row">
    <div class="col">

        <table class="table table-bordered table-dark" style="text-align:center">
            <tr class="bg-secondary">
                <th>Subject</th>
                <th>Count</th>
                <th>Last Changes</th>
            </tr>

            <tr>
                <td scope="col">News</td>
                <td scope="col">
                    @if (Model.NewsCounts.Count() > 0)
                    {

                        <span class="badge badge-info">@Model.NewsCounts.Count()</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">0</span>
                    }
                </td>
                <td scope="col">
                    @if (Model.NewsCounts.Count() > 0)
                    {
                        @Model.NewsCounts.FirstOrDefault()?.UpdatedDate
                    }

                </td>
            </tr>
            <tr>
                <td scope="col">Papers</td>
                <td scope="col">
                    @if (Model.PaperCounts.Count() > 0)
                    {
                        <span class="badge badge-info">@Model.PaperCounts.Count()</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">0</span>
                    }
                </td>

                <td scope="col">
                    @if (Model.PaperCounts.Count() > 0)
                    {
                        @Model.PaperCounts.FirstOrDefault()?.UpdatedDate
                    }

                </td>
            </tr>
            <tr>
                <td scope="col">Studies</td>
                <td scope="col">
                    @if (Model.StudieCounts.Count() > 0)
                    {
                        <span class="badge badge-info">@Model.StudieCounts.Count()</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">0</span>
                    }
                </td>
                <td scope="col">
                    @if (Model.StudieCounts.Count() > 0)
                    {
                        @Model.StudieCounts.FirstOrDefault()?.UpdatedDate
                    }

                </td>

            </tr>
            <tr>
                <td scope="col">Statements</td>
                <td scope="col">
                    @if (Model.StatementCounts.Count() > 0)
                    {
                        <span class="badge badge-info">@Model.StatementCounts.Count()</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">0</span>
                    }
                </td>
                <td scope="col">
                    @if (Model.StatementCounts.Count() > 0)
                    {
                        @Model.StatementCounts.FirstOrDefault()?.UpdatedDate
                    }

                </td>
            </tr>
            <tr>
                <td scope="col">Organisations</td>
                <td scope="col">
                    @if (Model.CompanyCounts.Count() > 0)
                    {
                        <span class="badge badge-info">@Model.CompanyCounts.Count()</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">0</span>
                    }
                </td>
                <td scope="col">
                    @if (Model.CompanyCounts.Count() > 0)
                    {
                        @Model.CompanyCounts.FirstOrDefault()?.UpdatedDate
                    }

                </td>
            </tr>
            <tr>
                <td scope="col">Photos</td>
                <td scope="col">
                    @if (Model.PhotoCounts.Count() > 0)
                    {
                        <span class="badge badge-info">@Model.PhotoCounts.Count()</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">0</span>
                    }
                </td>
                <td scope="col">
                    @if (Model.PhotoCounts.Count() > 0)
                    {
                        @Model.PhotoCounts.FirstOrDefault()?.UpdatedDate
                    }

                </td>
            </tr>
            <tr>
                <td scope="col">Videos</td>
                <td scope="col">
                    @if (Model.VideoCounts.Count() > 0)
                    {
                        <span class="badge badge-info">@Model.VideoCounts.Count()</span>
                    }
