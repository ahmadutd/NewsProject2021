@model AllNews.Domain.Photo

<br />
<div class="row">
    <div class="col">
        <div class="date-box d-flex align-items-baseline justify-content-start">
            <span class="fas fa-calendar-alt text-dark m-1"></span>
            <span class="datetime-now mr-1 ml-1">@Model.UpdatedDate</span>
         
            <div class="dropdown" id="share">
                <button class="share-btn btn btn-light mr-1 ml-1 dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <span class="fas fa-share-alt m-1"></span>
                </button>
                <div class="dropdown-menu share-colaps dropdown-menu-center" aria-labelledby="dropdownMenuButton">
                    <div class="d-flex">
                        <a  href="whatsapp://send?text=@Model.Title-@ViewBag.ShareURL/Photos/PhotoView/@Model.Id" data-action="share/whatsapp/share"><span class="fab fa-whatsapp text-success"></span></a>
                        <a  href="https://telegram.me/share/url?url=@Model.Title-@ViewBag.ShareURL/Photos/PhotoView/@Model.Id"><span class="fab fa-telegram text-info"></span></a>
                        <a  href="mailto:?=&subject=@Model.Title&body=@ViewBag.ShareURL/Photos/PhotoView/@Model.Id"><span class="fas fa-envelope text-secondary"></span></a>
                        <a  href="https://www.facebook.com/sharer/sharer.php?u=@Model.Title-@ViewBag.ShareURL/Photos/PhotoView/@Model.Id"><span class="fab fa-facebook text-primary"></span></a>
                        <a  href="https://twitter.com/intent/tweet?text=@Model.Title-@ViewBag.ShareURL/Photos/PhotoView/@Model.Id"><span class="fab fa-twitter text-info"></span></a>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>
<hr class="m-0" />
<div class="row">
    <div class="col">
        <div class="news-header">

            <h5>@Model.Title</h5>

        </div>
    </div>
</div>
<br />
@if (Model.Image != null || Model.ImageCoverPath != null)
{
    @if (Model.Image != null)
    {
        <div class="row">
            <div class="col col-md-8">
                <a class="image-view" target="_blank" href="@Model.Image">
                    <img src="@Model.Image" alt="Alternate Text" />
                </a>
            </div>
        </div>
    }
    @if (Model.ImageCoverPath != null)
    {
        <div class="row">
            <div class="col col-md-8">
                <a class="image-view" target="_blank" href="@ViewBag.AdminURL/Upload/Photos/@Model.ImageCoverPath">
                    <img src="@ViewBag.AdminURL/Upload/Photos/@Model.ImageCoverPath" alt="Alternate Text" />
                </a>
            </div>
        </div>
    }
}
<br />
<div class="row">
    @if (Model.Description != null)
    {



        <div class="col">

            <div class="news-desc">

                <pre>@Model.Description</pre>

            </div>

        </div>



    }
    else
    {

    }
</div>

<hr />
<div class="row">
    <div class="col col-md-10">
        <div class="tag-box d-flex flex-wrap">
            <span class="fas fa-tags mr-1 ml-1"></span>

            @foreach (var item in Model.PhotoTag)
            {
                <div class="tag-item">@item.Tag.Name</div>
            }


        </div>
    </div>
</div>