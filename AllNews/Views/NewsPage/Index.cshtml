@model AllNews.Domain.News
<br />
<div class="row">
    <div class="col">
        <div class="date-box d-flex align-items-baseline justify-content-start">
            <span class="fas fa-calendar-alt text-dark m-1"></span>
            <span class="datetime-now mr-1 ml-1">@Model?.UpdatedDate</span>
            <span class="cate-title mr-1 ml-1">@Model?.Category.CategoryName</span>

           
                <div class="dropdown" id="share">
                    <button class="share-btn btn btn-light mr-1 ml-1 dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span class="fas fa-share-alt m-1"></span>
                    </button>
                    <div class="dropdown-menu share-colaps dropdown-menu-center" aria-labelledby="dropdownMenuButton">
                        <div class="d-flex">
                            <a href="whatsapp://send?text=@Model.Title-@ViewBag.ShareURL/NewsPage/Index/@Model.Id" data-action="share/whatsapp/share"><span class="fab fa-whatsapp text-success"></span></a>
                            <a href="https://telegram.me/share/url?url=@Model.Title-@ViewBag.ShareURL/NewsPage/Index/@Model.Id"><span class="fab fa-telegram text-info"></span></a>
                            <a href="mailto:?=&subject=@Model.Title-@Model.FirstDescription&body=@ViewBag.ShareURL/NewsPage/Index/@Model.Id"><span class="fas fa-envelope text-secondary"></span></a>
                            <a href="https://www.facebook.com/sharer/sharer.php?u=@Model.Title-@ViewBag.ShareURL/NewsPage/Index/@Model.Id"><span class="fab fa-facebook text-primary"></span></a>
                            <a href="https://twitter.com/intent/tweet?text=@Model.Title-@ViewBag.ShareURL/NewsPage/Index/@Model.Id"><span class="fab fa-twitter text-info"></span></a>
                        </div>
                    </div>

                </div>
            
                
        </div>

    </div>
</div>
<hr class="m-0" />
<div class="row">
    <div class="col">
        <div class="news-header">

            <h5>@Model.Title</h5>

        </div>
    </div>
</div>
<br />

@if (Model.FirstImage != null || Model.ImageCoverPath != null)
{
    @if (Model.FirstImage != null)
    {
        <div class="row">

            <div class="col col-md-8">
                <div class="img-news-second">
                    <img src="@Model.FirstImage" alt="Alternate Text" />
                </div>
            </div>
        </div>
    }
    @if (Model.ImageCoverPath != null)
    {
        <div class="row">

            <div class="col col-md-8">
                <div class="img-news-second">
                    <img src="@ViewBag.AdminURL/Upload/News/Images/@Model.ImageCoverPath" alt="Alternate Text" />
                </div>
            </div>
        </div>
    }
}
<br />


<br />
<div class="row ">
    <div class="col col-md-8">
        <div class="desc-box d-flex align-items-baseline">
           
            <p>@Model.FirstDescription</p>
        </div>
    </div>
</div>
<br />
@if (Model.FirstDescriptionFirstParagraph != null)
{
    <div class="row">
        <div class="col col-md-8">
            <div class="news-desc">
                <pre>
                    @Model.FirstDescriptionFirstParagraph
                </pre>
            </div>
        </div>
    </div>
}



@if (Model.SecondImage != null)
{
    <div class="row">

        <div class="col col-md-8">
            <div class="img-news-second">
                <img src="@Model.SecondImage" alt="Alternate Text" />
            </div>
        </div>
    </div>
}
<br />

@if (Model.SecondDescription != null)
{
    <div class="row">
        <div class="col col-md-8">
            <div class="desc-box">
                <p>@Model.SecondDescription</p>
            </div>
        </div>
        <br />
    </div>
}
@if (Model.SecondDescriptionFirstParagraph != null)
{
    <div class="row">
        <div class="col col-md-10">

            <div class="news-desc">

                <pre>@Model.SecondDescriptionFirstParagraph</pre>

            </div>

        </div>
    </div>
}

<br />

@if (Model.Video != null || Model.VideoCoverPath != null)
{
    @if (Model.Video != null)
    {
        <div class="row">
            <div class="col col-md-8">
                <div class="videoplay-container">
                    <iframe class="responsive-iframe" src="https://www.youtube.com/embed/@Model.Video"
                            title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen>
                    </iframe>
                </div>
            </div>
        </div>
    }
    @if (Model.VideoCoverPath != null)
    {
        <div class="row">
            <div class="col col-md-8">
                <video class="w-100" controls="controls">
                    <source src="@ViewBag.AdminURL/Upload/News/Videos/Media/@Model.VideoCoverPath" type="video/mp4" />
                </video>
            </div>
        </div>

    }
}
<br />

<hr />
<div class="row">
    <div class="col col-md-10">
        <div class="tag-box d-flex flex-wrap">
            <span class="fas fa-tags mr-1 ml-1"></span>

            @foreach (var item in Model.NewsTag)
            {
                <div class="tag-item">@item.Tag.Name</div>
            }


        </div>
    </div>
</div>
<br />