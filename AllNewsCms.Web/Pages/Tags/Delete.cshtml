@page
@model AllNewsCms.Web.Pages.Tags.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<div class="row">
    <div class="col">
        <div class="tab-header-delete alert-danger d-flex align-items-center">
            <img src="~/img/Delete/Delete.png" alt="Alternate Text" />
            <strong>Are you sure you want to delete this section?</strong>
            <form class="ml-auto p-1" method="post">
                <input type="hidden" asp-for="Tags.Id" />

                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
</div>
<hr />
<div class="row" style="text-align:center">

    <div class="col col-md-12">
        <div class="form-delete p-2">
            <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Tags.Name)</h6>
            <span>@Model.Tags?.Name</span>

        </div>
    </div>

    <div class="col-12 col-md-6">
        <div class="form-delete p-2">
            <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Tags.CreatedDate)</h6>
            <b>@Model.Tags.CreatedDate</b>
        </div>

    </div>
    <div class="col-12 col-md-6">
        <div class="form-delete p-2">
            <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Tags.CreatedBy)</h6>
            <b>@Model.Tags?.CreatedUser</b>
        </div>

    </div>
    <div class="col-12 col-md-6">
        <div class="form-delete p-2">
            <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Tags.UpdatedDate)</h6>
            <b>@Model.Tags?.UpdatedDate</b>
        </div>

    </div>
    <div class="col-12 col-md-6">
        <div class="form-delete p-2">
            <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Tags.UpdatedBy)</h6>
            <b>@Model.Tags?.UpdatedUser</b>
        </div>

    </div>
</div>


