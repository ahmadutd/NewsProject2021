@page
@model AllNewsCms.Web.Pages.Audios.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<div class="row">
    <div class="col">
        <div class="tab-header-delete alert-danger d-flex align-items-center">
            <img src="~/img/Delete/Delete.png" alt="Alternate Text" />
            <strong>Are you sure you want to delete this section?</strong>
            <form class="ml-auto p-1" method="post">
                <input type="hidden" asp-for="Audios.Id" />

                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
</div>
<hr />
<div class="row" style="text-align:center">

    @if (@Model.Audios.Title != null)
    {
        <div class="col-12">
            <div class="form-delete p-2">
                <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Audios.Title)</h6>
                <span>@Model.Audios.Title</span>

            </div>
        </div>
    }
    @if (@Model.Audios.AudioCoverPath != null)
    {
        <div class="col-12">
            <div class="form-delete p-2">

                <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Audios.AudioCoverPath)</h6>
                <audio controls="controls">
                    <source src="/Upload/Audios/Voices/@Model.Audios.AudioCoverPath" type="audio/mp3" />
                </audio>

            </div>
        </div>
    }
    @if (@Model.Audios.Description != null)
    {
        <div class="col-12">
            <div class="form-delete p-2">
                <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Audios.Description)</h6>
                <span>@Model.Audios.Description</span>

            </div>
        </div>
    }
    @if (@Model.Audios.Image != null)
    {
        <div class="col-12">
            <div class="form-delete p-2">
                <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Audios.Image)</h6>
                <img src="@Model.Audios.Image" alt="Alternate Text" />

            </div>
        </div>
    }
    @if (@Model.Audios.ImageCoverPath != null)
    {
        <div class="col-12">
            <div class="form-delete p-2">
                <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Audios.ImageCoverPath)</h6>
                <img src="/Upload/Audios/Images/@Model.Audios.ImageCoverPath" alt="Alternate Text" />

            </div>
        </div>
    }
    <div class="col-12">
        <div class="form-delete p-2">
            <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Audios.CreatedDate)</h6>
            <b>@Model.Audios.CreatedDate</b>
        </div>

    </div>
    <div class="col-12">
        <div class="form-delete p-2">
            <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Audios.CreatedBy)</h6>
            <b>@Model.Audios.CreatedUser?.UserName</b>
        </div>

    </div>
    <div class="col-12">
        <div class="form-delete p-2">
            <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Audios.UpdatedDate)</h6>
            <b>@Model.Audios.UpdatedDate</b>
        </div>

    </div>
    <div class="col-12">
        <div class="form-delete p-2">
            <h6 class="alert-danger">@Html.DisplayNameFor(x => x.Audios.UpdatedBy)</h6>
            <b>@Model.Audios.UpdatedUser?.UserName</b>
        </div>

    </div>
</div>


